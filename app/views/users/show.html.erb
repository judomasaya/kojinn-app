<div class= "back">
  <%= link_to 'メインページへ戻る', '/posts/' %>
</div>
<div class="postTitle">
  <div class="postname">
    薬剤師「<%= @user.nickname %>」がお勧めしたお薬記録
  </div>
    <% @posts.each do |post| %>
      <div class="content">
        <div class="content__left">
          <div class="content__left--image"></div>
        </div>
        <div class="content__right">
          <div class="content__right__top">
           <p>接客内容</p>
           <%= link_to post.name, post_path(post.id), class: "content__right__top--title" %>
          </div>
          <div class="content__right__bottom">
               お薬は「<%= post.nickname %>」をお勧めしました！
            <div class="content__right__bottom--userName">
             <p>投稿者</p>
             <%= link_to post.user.nickname, user_path(post.user), class: "content__right__bottom--userName--btn" %>
            </div>
            <div class="content__right__bottom--date">
             <%= post.created_at %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate(@posts)%>
</div>